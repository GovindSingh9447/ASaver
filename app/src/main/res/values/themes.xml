<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StatusSaverUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/limed_spruce</item>
        <item name="colorPrimaryVariant">@color/river_bed</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.MaterialComponents">

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SplashImage" parent="Theme.MaterialComponents.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/limed_spruce</item>
        <item name="android:windowBackground">@drawable/splash_image</item>

    </style>

</resources>